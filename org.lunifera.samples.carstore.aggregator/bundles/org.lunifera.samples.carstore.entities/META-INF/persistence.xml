<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="carstore" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>osgi:service/CarstoreDsJTA</jta-data-source>
		<non-jta-data-source>osgi:service/CarstoreDs</non-jta-data-source>
		<class>org.lunifera.samples.carstore.entities.general.Accessory</class>
		<class>org.lunifera.samples.carstore.entities.general.Address</class>
		<class>org.lunifera.samples.carstore.entities.general.Amount</class>
		<class>org.lunifera.samples.carstore.entities.general.Base</class>
		<class>org.lunifera.samples.carstore.entities.general.Car</class>
		<class>org.lunifera.samples.carstore.entities.general.CarManufacturer</class>
		<class>org.lunifera.samples.carstore.entities.general.ConfigDetailDefinition</class>
		<class>org.lunifera.samples.carstore.entities.general.Convertible</class>
		<class>org.lunifera.samples.carstore.entities.general.Currency</class>
		<class>org.lunifera.samples.carstore.entities.general.Customer</class>
		<class>org.lunifera.samples.carstore.entities.general.Item</class>
		<class>org.lunifera.samples.carstore.entities.general.Length</class>
		<class>org.lunifera.samples.carstore.entities.general.NumberedWithDescription</class>
		<class>org.lunifera.samples.carstore.entities.general.PaymentTerm</class>
		<class>org.lunifera.samples.carstore.entities.general.Pickup</class>
		<class>org.lunifera.samples.carstore.entities.general.Price</class>
		<class>org.lunifera.samples.carstore.entities.general.Quantity</class>
		<class>org.lunifera.samples.carstore.entities.general.RoofType</class>
		<class>org.lunifera.samples.carstore.entities.general.UnitOfMeasure</class>
		<class>org.lunifera.samples.carstore.entities.general.UOMFamily</class>
		<class>org.lunifera.samples.carstore.entities.general.Weight</class>
		<class>org.lunifera.samples.carstore.entities.general.CarConfigDetail</class>
		<class>org.lunifera.samples.carstore.entities.general.CarReceipt</class>
		<class>org.lunifera.samples.carstore.entities.general.Inventory</class>
		<class>org.lunifera.samples.carstore.entities.general.ManufacturerOrder</class>
		<class>org.lunifera.samples.carstore.entities.general.CascadeRoot</class>
		<class>org.lunifera.samples.carstore.entities.general.CascadeYes</class>
		<class>org.lunifera.samples.carstore.entities.general.CascadeNo</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- <property name="eclipselink.target-database" value="Derby" /> -->
			<!-- <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" 
				/> -->
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:derby:carstoreDB;create=true" 
				/> -->
			<!-- <property name="javax.persistence.jdbc.user" value="app" /> -->
			<!-- <property name="javax.persistence.jdbc.password" value="app" /> -->

			<property name="eclipselink.target-server"
				value="org.lunifera.runtime.eclipselink.core.fragment.LuniferaPlatform" />

			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.timestamp" value="false" />
			<property name="eclipselink.logging.thread" value="false" />
			<property name="eclipselink.logging.exceptions" value="true" />
			<property name="eclipselink.orm.throw.exceptions" value="true" />
			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.create-ddl-jdbc-file-name"
				value="createDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="both" />

			<property name="eclipselink.weaving" value="static" />
			<!-- Enable this property in development mode if you want dynamic weaving! -->
			<!-- <property name="eclipselink.weaving" value="true" /> -->

		</properties>
	</persistence-unit>
</persistence>
